<section class="connect-form" id="join-wishlist">
  <div class="connect-form__bg-wrapper">
    {{> bank-bg-bottom-svg}}
  </div>
  <form class="connect-form__inner main-padding">
    <h3 class="form-title-js connect-form__item text text_color_orange text_size_main">
      Just 2 simple steps
    </h3>

    <div class="connect-form__item form-step">
      <span class="connect-form__point form-step__count text text_size_small">
        1
      </span>
      <h4 class="connect-form__item form-step__title form-step text text_uppercase text_size_x-small">
        Please, connect your <br>
        Zeeves account
      </h4>
      <a class="form-step__connect" href="/" target=_blank>
        <button class="form-step__button button button_type_secondary text_size_small">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <circle cx="12" cy="12" r="12" fill="#CFEAEC" />
            <path
              d="M11.4165 9.0835L13.7497 6.75025C14.7162 5.78379 16.2832 5.78379 17.2496 6.75025V6.75025C18.2161 7.71671 18.2161 9.28366 17.2496 10.2501L14.9164 12.5834"
              stroke="#299197" stroke-width="2" />
            <path
              d="M9.08301 11.417L6.74976 13.7502C5.7833 14.7167 5.7833 16.2836 6.74976 17.2501V17.2501C7.71623 18.2166 9.28317 18.2166 10.2496 17.2501L12.5829 14.9169"
              stroke="#299197" stroke-width="2" />
            <path d="M14.3325 9.66699L9.66603 14.3335" stroke="#299197" stroke-width="2" />
          </svg>
          Connect wallet
        </button>
      </a>
    </div>

    <div class="connect-form__item form-step">
      <span class="connect-form__point form-step__count text text_size_small">
        2
      </span>
      <h4 class="connect-form__item form-step__title form-step text text_uppercase text_size_x-small">
        enter your E-mail
      </h4>
      <input class="connect-form__input text text_size_h2" type="text" placeholder="mail@mail.com">
      <label class="connect-form__checkbox checkbox">
        <input class="css-checkbox" type="checkbox">
        <i></i>
        <span class="text text_size_x-small text_uppercase text_weight_bold">
          I accept
          <a class="text text_color_gray text_size_x-small text_uppercase text_weight_bold" target="_blank" href="https://zeeves.com/docs/pp.pdf">
            privacy policy
          </a>
          and
          <a class="text text_color_gray text_size_x-small text_uppercase text_weight_bold" target="_blank" href="https://zeeves.com/docs/tos.pdf">
            terms and conditions
          </a>
        </p>
      </label>
    </div>

    <div class="connect-form__item form-step">
      {{!-- <div class="connect-form__recaptcha g-recaptcha" data-sitekey="6LeLU4EgAAAAAFtX9fs9XpcfFPOk3cBzvE_hWQmG"></div> --}}
      <button id="demo-form" data-sitekey="6LeLU4EgAAAAAFtX9fs9XpcfFPOk3cBzvE_hWQmG" data-callback='onSubmit' data-action='submit' class="g-recaptcha connect-form__submit text text_color_white" type="submit">
        Submit
      </button>
    </div>

  </form>
</section>
